    <style>
        .product-container{
            display: flex;
            gap: 1rem;
            width: 90%;
            margin: auto;
            min-height: 380px !important;
            flex-wrap: wrap;
        }
        #box {
            margin: auto !important;
            flex-wrap: wrap;
            box-sizing: border-box;
            width: 250px;
            padding: 10px !important;
            height: 400px !important;
            margin-bottom: 30px;
        }
        #box img{
            width: 90%;
            height: 50%;
            object-fit: contain;
            margin: auto;
            /* border: 1px solid red !important; */
        }
        .price-btn{
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .price-btn button{
            cursor: pointer;
            height: 35px;
            border: none;
            background-color: rgb(255, 7, 7);
            padding: 0 10px;
            border-radius: 5px;
            color: white;
            transition: 0.5s;
        }
        .price-btn button:hover{
            background-color: rgb(131, 4, 4);
        }
    </style>

